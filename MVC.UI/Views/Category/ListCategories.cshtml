@model CategoryVM
@{
    ViewBag.Title = "ListCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>CategoryName</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>
                                @item.CategoryName
                            </td>
                            <td>@item.Description</td>
                            <td>

                                @Html.ActionLink("Update","UpdateCategory", new { id = item.ID }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Delete","DeleteCategory", new { id = item.ID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Category/AddCategory" class="btn btn-success">Add Category</a>

        </div>
    </div>
</div>

