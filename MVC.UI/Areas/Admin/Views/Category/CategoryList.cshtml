@model List<DAL.Entity.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="col-md-6">
                <header class="panel-heading">
                   <button type="submit" class="btn btn-warning">Create Category</button>
                </header>
            </div>
            <div  class="col-md-6">
                <header class="panel-heading">
                    Category Table
                </header>
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> CategoryName</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> Description</th>
                        <th><i class="icon-bookmark"></i> Profit</th>
                        <th><i class=" icon-edit"></i> Status</th>
                        <th></th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                    <tr>

                        <td><a href="#">@category.CategoryName</a></td>
                        <td class="hidden-phone">@category.Description</td>
                        <td>@category.CategoryName </td>
                        <td><span class="label label-info label-mini">@category.Status</span></td>
                        <td>
                            <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                            <button class="btn btn-primary btn-xs"><i class="icon-pencil">@Html.ActionLink("Update", "UpdateCategory", new { id = category.ID })</i></button>
                            <button class="btn btn-danger btn-xs"><i class="icon-trash "></i>@Html.ActionLink("Delete", "DeleteCategory", new { id = category.ID })</button>
                        </td>
                        
                       
                      

                    </tr>
                     }

                    </tbody>
            </table>
        </section>
    </div>
</div>
