@model List<DAL.Entity.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="col-md-6">
                <header class="panel-heading">
                    <button type="submit" class="btn btn-warning">Create Product</button>
                </header>
            </div>
            <div class="col-md-6">
                <header class="panel-heading">
                    Product Table
                </header>
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> ProductName</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> UnitPrice</th>
                        <th><i class="icon-bookmark"></i> UnitsInStock</th>
                        <th><i class=" icon-edit"></i> Status</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>

                            <td><a href="#">@product.ProductName</a></td>
                            <td class="hidden-phone">@product.UnitPrice</td>
                            <td>@product.UnitsInStock </td>
                            <td><span class="label label-info label-mini">@product.Status</span></td>
                            <td>
                                <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button class="btn btn-primary btn-xs"><i class="icon-pencil">@Html.ActionLink("Update", "UpdateProduct", new { id = product.ID })</i></button>
                                <button class="btn btn-danger btn-xs"><i class="icon-trash "></i>@Html.ActionLink("Delete", "DeleteProduct", new { id = product.ID })</button>
                            </td>




                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
