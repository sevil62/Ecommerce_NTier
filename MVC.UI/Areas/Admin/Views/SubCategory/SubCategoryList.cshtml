@model List<DAL.Entity.SubCategory>
@{
    ViewBag.Title = "SubCategoryList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="col-md-6">
                <header class="panel-heading">
                    <button type="submit" class="btn btn-warning">Create SubCategory</button>
                </header>
            </div>
            <div class="col-md-6">
                <header class="panel-heading">
                    SubCategory Table
                </header>
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> SubCategoryName</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> Description</th>
                        
                        <th><i class=" icon-edit"></i> Status</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var subCategory in Model)
                    {
                        <tr>

                            <td><a href="#">@subCategory.SubCategoryName</a></td>
                            <td class="hidden-phone">@subCategory.SubDescription</td>
                           
                            <td><span class="label label-info label-mini">@subCategory.Status</span></td>
                            <td>
                                <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button class="btn btn-primary btn-xs"><i class="icon-pencil">@Html.ActionLink("Update", "UpdateSubCategory", new { id = subCategory.ID })</i></button>
                                <button class="btn btn-danger btn-xs"><i class="icon-trash "></i>@Html.ActionLink("Delete", "DeleteSubCategory", new { id = subCategory.ID })</button>
                            </td>




                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>


