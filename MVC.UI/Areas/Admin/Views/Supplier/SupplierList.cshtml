@model List<DAL.Entity.Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="col-md-6">
                <header class="panel-heading">
                    <button type="submit" class="btn btn-warning">Create Supplier</button>
                </header>
            </div>
            <div class="col-md-6">
                <header class="panel-heading">
                    Supplier Table
                </header>
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> CompanyName</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> Address</th>
                        <th><i class="icon-bookmark"></i> Email</th>
                        <td><span class="label label-info label-mini">Status</span></td>

                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>

                            <td><a href="#">@supplier.CompanyName</a></td>
                            <td class="hidden-phone">@supplier.Address</td>
                            <td>@supplier.Email </td>
                            <td><span class="label label-info label-mini">@supplier.Status</span></td>
                            <td>
                                <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button class="btn btn-primary btn-xs"><i class="icon-pencil">@Html.ActionLink("Update", "UpdateSupplier", new { id = supplier.ID })</i></button>
                                <button class="btn btn-danger btn-xs"><i class="icon-trash "></i>@Html.ActionLink("Delete", "DeleteSupplier", new { id = supplier.ID })</button>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
